function CHECK_ARGS() {
  if [[ $1 -ne 0 ]]; then
    echo -e "\033[031mСкрипт должен запускаться без параметров\033[0m"
    exit 1
  fi
}

function CHECK_LOG_FILES() {
  for file in $log_file; do
    if [ ! -f "$file" ]; then
      echo -e "\033[031mФайл не существует: $file\033[0m"
      exit 1
    fi
  done
}

